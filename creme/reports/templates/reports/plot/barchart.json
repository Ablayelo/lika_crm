{% load creme_core_tags %}
{% load reports_tags %}
{
    "seriesDefaults": {
        "renderer": "jqplot.BarRenderer", 
        "rendererOptions": {
            "showDataLabels": true,
            "fillToZero": true,
            "varyBarColor": true
        }
    },
    "axes": {
        "xaxis": {
            "renderer": "jqplot.CategoryAxisRenderer",
            "ticks": [],
            "label": "{{report|verbose_abscissa:report.abscissa}}{% if report.type %} - {{verbose_report_graph_types|get_value:report.type}}{% if report.days %} ({{report.days}}){% endif %}{% endif %}",
            "labelOptions": {
                "fontWeight": "bold",
                "fontSize":   "10pt",
                "textColor":  "black"
                {% if plotXAxisAngle %}"angle": {{plotXAxisAngle}},{% endif %}
            },
            "labelRenderer": "jqplot.CanvasAxisLabelRenderer"
        },
        "yaxis": {
            {% if report.is_count %}
            "tickInterval": 1,
            "min": 0.0,
            {% endif %}
            "tickOptions": {
                "formatString": {% if report.is_count %}"%d"{% else %}"%.2f"{% endif %}
            },
            "label": "{{report|verbose_ordinate:report.ordinate}}",
            "labelOptions": {
                "fontWeight": "bold",
                "fontSize": "10pt",
                "textColor": "black"
            },
            "labelRenderer": "jqplot.CanvasAxisLabelRenderer"
        }
    },
    "highlighter": {
        "show": true,
        "showMarker": false,
        "tooltipAxes": "y",
        "formatString": "%s",
        "tooltipLocation": "n",
        "cursorStyle": "pointer"
    },
    "handlers": [
        {"action": "redirect", "event": "click", "url": "%2$s"}
    ],
    "title": "{{report}}",
    "dataFormat": "creme.graphael.BargraphData",
    "dataDefaults": [[["", 0.0]]]
}