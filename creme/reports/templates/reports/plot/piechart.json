{
    "seriesDefaults": {
        "renderer": "jqplot.PieRenderer", 
        "rendererOptions": {
            "showDataLabels": true
        }
    },
    "legend": {
        "show": true,
        "renderer": "jqplot.EnhancedLegendRenderer",
        "rendererOptions": {
            {% if legend_rows %}"numberRows": {{legend_rows}},{% endif %}
            "disableIEFading": false
        },
        "placement": "outsideGrid",
        "location": "e"
    },
    "highlighter": {
        "show": true,
        "showMarker": false,
        "useAxesFormatters": false,
        "tooltipAxes": "xy",
        "formatString": "<center>%s</center><center>{% if rgraph.is_count %}%d{% else %}%.2f{% endif %}</center>",
        "tooltipLocation": "cursor",
        "cursorStyle": "pointer"
    },
    "handlers": [
        {"action": "redirect", "event": "click", "url": "%2$s"}
    ],
    "title": "{{rgraph}}",
    "dataFormat": "creme.graphael.BargraphData"
}